<input type="hidden" value="radio" data-def="type">
<div class="form-horizontal">
	<label for="title" class="control-label" style="margin-top:0;">请输入题目标题</label>
	<textarea name="title" data-def="title" class="form-control"><%= question.title %></textarea>
	<label for="pic" class="control-label" style="margin-top:20px;">选择题目图片</label>
	<input type=file id="pic_file" class="pic_file" name='qfile' style="margin-top:5px;">
	<div style='margin-top:10px;'>
	图片：<input id='pic_url' name='pic_url' type="hidden" data-def="pic" value="<%=question.pic%>">
	<%if(typeof question.pic != 'undefined') {%>
         <img class="prev"  style='width:100px;height:100px;' src='<%=question.pic%>'>
	<%}else{%>
         <img class="prev"  style='width:100px;height:100px;' >
      <%}%>
	</div>
	<% var data = question.data; %>
	<%if(typeof data != 'undefined') {%>
	<ul>
	  <% for(var i=0;i<data.length;i++) { %>
	  	<% var option = data[i] %>
	  	<li>
	  		<label class="control-lable">选项<%=i+1%></label>
	  		<input type="checkbox" data-def="option_necessory" <%= option.extra_necessory ? "checked":""%>/>必须
	  		<input type="checkbox" data-def="option_text" <%= option.extra_type ? "checked":"" %> />输入额外内容？
	  		<input class="form-control" type="text" data-def="option" value="<%=option.title%>" >
	  	</li>
	  <% } %>
	</ul>
	<%}%>
	<button data-action="add-option" class="btn btn-default">增加一个选项</button>
</div>
<% if(config.brandnew) {%>
	<button class="btn btn-success add" data-dismiss="modal" data-action="add-question">添加</button>
<% } else { %>
    <button class="btn btn-primary update" data-dismiss="modal" data-action="update-<%=config.index%>">修改</button>
<% } %>